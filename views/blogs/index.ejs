<%- include ('../partials/header.ejs') %>
<div class="ui main text container">
    <header class="jumbotron">
        <div class="container">
                <a class="btn btn-primary btn-large" href="/blogs/new">Add New Blog</a>
            </p>
        </div>    
    </header>
    <div class="ui huge header">Blogs</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%= blog._id%>" class="header"><%=blog.title%></a>
                        <div class="meta">
                            <span>Date: <%= blog.created.toDateString()%></span>
                        </div>
                        <div class="description">
                            <p>
                                <em>Submitted by <%= blog.creator.name %></em>
                            </p>
                            <p><%= blog.body%>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui basic floated purple button" href="/blogs/<%= blog._id%>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>   
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include ('../partials/footer.ejs') %>